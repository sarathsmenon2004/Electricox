<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/adminBackgroundColor"
    android:orientation="vertical"
 >

    <!-- Card Container for Service Provider Information -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Profile Image with Circular Background -->
            <ImageView
                android:id="@+id/SPImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/serviceprovider"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:contentDescription="Service Provider Image" />

            <!-- Service Provider Details in Vertical Layout -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Service Provider Name -->
                <TextView
                    android:id="@+id/SPName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPNAME"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/adminTitleColor"
                    android:paddingBottom="4dp"
                    android:fontFamily="@font/quicksand_medium" />

                <!-- Divider for each label-value pair -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider"
                    android:showDividers="middle">

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Address:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/adminTitleColor" />
                        <TextView
                            android:id="@+id/SPaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Street, City"
                            android:textSize="14sp"
                            android:textColor="@color/adminTitleColor" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Email:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/adminTitleColor" />
                        <TextView
                            android:id="@+id/SPemail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@com"
                            android:textSize="14sp"
                            android:textColor="@color/adminTitleColor" />
                    </LinearLayout>

                    <!-- Phone Number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Number:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/adminTitleColor" />
                        <TextView
                            android:id="@+id/SPnumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1234567890"
                            android:textSize="14sp"
                            android:textColor="@color/adminTitleColor" />
                    </LinearLayout>

                    <!-- Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Status:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/adminTitleColor" />
                        <TextView
                            android:id="@+id/SPstatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending/ReqAccepted"
                            android:textSize="14sp"
                            android:textColor="@android:color/holo_green_dark" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
