<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">

        <!-- Username Section -->
        <TextView
            android:id="@+id/USERNAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Username"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <!-- Divider between sections -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"
            android:layout_marginBottom="8dp"/>

        <!-- Label and Value Layouts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider"
            android:showDividers="middle">

            <!-- Slot Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Slot no:"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <TextView
                    android:id="@+id/SLOT_NUM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blah blah blah"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand_medium" />
            </LinearLayout>

            <!-- Subject -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subject:"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <TextView
                    android:id="@+id/SUBJECT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blah blah blah"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand_medium" />
            </LinearLayout>

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Description:"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand_medium" />

                <TextView
                    android:id="@+id/DESCRIPTION"
                    android:layout_width="wrap_content"
                    android:layout_height="86dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="Blah blah blah description"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Bunk Owner Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <TextView
                    android:id="@+id/goneOmne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bunk Owner Name:"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <TextView
                    android:id="@+id/BunkOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blah blah blah owner name"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand_medium" />
            </LinearLayout>

            <!-- Owner Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <TextView
                    android:id="@+id/goneTwo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Owner Number:"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <TextView
                    android:id="@+id/OwnerNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234567890"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand_medium" />
            </LinearLayout>

            <!-- Rating (as stars) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rating:"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/quicksand_medium" />
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="4.5"
                    android:isIndicator="true" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
